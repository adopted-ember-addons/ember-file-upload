<label
  for={{this.for}}
  class="file-upload"
  ...attributes
  {{this.bindListeners}}
>
  <input
    id={{this.for}}
    type="file"
    accept={{@accept}}
    capture={{@capture}}
    multiple={{@multiple}}
    disabled={{@disabled}}
    hidden
    {{this.queue.selectFile filter=@filter filesSelected=@filesSelected}}
  />

  {{yield this.queue}}
</label>

