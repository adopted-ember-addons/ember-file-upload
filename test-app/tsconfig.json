{
  "extends": "@tsconfig/ember/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "test-app/tests/*": [
        "tests/*"
      ],
      "test-app/*": [
        "app/*"
      ],
      "*": [
        "types/*"
      ]
    },
    "moduleResolution": "node16",
    "skipLibCheck": true
  },
  "glint": {
    "environment": "ember-loose"
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*"
  ]
}
